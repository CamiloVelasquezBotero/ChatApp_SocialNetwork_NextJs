generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int     @id @default(autoincrement())
  name              String  
  email             String  @unique
  password          String  
  friends           User[]  @relation("Friends")
  friendOf          User[]  @relation("Friends") // Pivote
  requestsSent      User[]  @relation("Requests")     
  requestsReceived  User[]  @relation("Requests")
}
